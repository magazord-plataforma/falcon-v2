{
  "name": "@mzrd/falcon-v2",
  "private": false,
  "version": "1.1.8",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "src/packages/*"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "dev": "vite",
    "version:all": "npm run --workspace src/packages version:update",
    "publish:all": "npm run version:all && npm publish --workspaces --if-present --access public",
    "publish": "npm publish --access public",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "esbuild": "^0.24.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "lerna": "^8.1.8",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1"
  }
}
